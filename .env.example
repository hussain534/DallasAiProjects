# BSG Demo Platform - Environment Configuration
# Copy this file to .env and update with your values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=BSG Demo Platform
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# API Settings
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database Settings
# ===========================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bsg_demo

# Connection pool settings
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=False

# MSSQL External Database (ODS/SDS)
MSSQL_HOST=10.1.4.135
MSSQL_PORT=1433
MSSQL_USER=dist1
MSSQL_PASSWORD=dist1
MSSQL_DATABASE=ODS
MSSQL_SCHEMA=dbo

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Generate a secure key for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS Settings
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# ===========================================
# Logging Settings
# ===========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=  # Optional: path to log file

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# Redis Cache (Optional)
# ===========================================
# Redis connection string (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=False
CACHE_TTL=300

# ===========================================
# Video Storage
# ===========================================
VIDEO_STORAGE_PATH=./uploads/videos
VIDEO_MAX_SIZE_MB=500
VIDEO_ALLOWED_FORMATS=mp4,mov,avi,webm
VIDEO_CHUNK_SIZE=1048576  # 1MB in bytes

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SECURE_COOKIES=True

# ===========================================
# Monitoring
# ===========================================
METRICS_ENABLED=True
TRACING_ENABLED=False

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT=5

# ===========================================
# Production-Only Settings
# ===========================================
# Only used when ENVIRONMENT=production

# Secret Management
# AWS_SECRETS_MANAGER_NAME=
# VAULT_URL=
# VAULT_TOKEN=

# SSL/TLS
